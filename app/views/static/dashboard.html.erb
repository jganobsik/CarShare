<section class="hero is-dark is-medium">
<div class="hero-body">
   <div class="container has-text-centered">
<h1 class="title is-1">  Welcome to WeekendGetaway  </h1>
</div>
</div>
</section>
<% @getaways.each do |getaway| %>
<%= getaway.title %>
<br>
<% if getaway.accommodations %>
<% getaway.accommodations.each do |acc| %>

<%= acc.city %>
<% end %>
<% end %>
<br>
<%= link_to "See this Getaway", getaway_path(getaway), :class => "button is-fullwidth is-link"%>
<br>
<br>
<% end %>

<div class="buttons are-large">
<%= link_to "Create a Getaway", new_getaway_path, :class => "button is-fullwidth is-link" %>
<p class="button is-fullwidth is-link new_agency">Add a Travel Agency</p>
<p class="button is-fullwidth is-link agencies"> See Travel Agencies </p>
<br>
<%= link_to "Get Inspired by Other Getaways", getaways_path, :class => "button is-fullwidth is-link" %>
